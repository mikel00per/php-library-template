{
    "name": "mikelooper/php-library-template",
    "type": "library",
    "description": "A template to create libraries",
    "keywords": ["library"],
    "homepage": "https://github.com/mikel00per/php-library-template",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpLibraryTemplate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpLibraryTemplate\\Tests\\": "tests/"
        },
        "classmap": [
            "src/"
        ]
    },
    "authors": [
        {
            "name": "Miguel Morillo",
            "email": "miguelmwilliams@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "selective/test-traits": "^2.2",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^4.30"
    },
    "scripts": {
        "test": [
            "@analyze",
            "@test:unit"
        ],
        "lint:fix": "phpcbf",
        "test:unit":  "phpunit --configuration phpunit.xml --do-not-cache-result --testsuite=Units --colors=always",
        "test:integration":  "phpunit --configuration phpunit.xml --do-not-cache-result --testsuite=Integration --colors=always",
        "test:coverage": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover tmp/coverage/logs/clover.xml --coverage-html tmp/coverage",
        "analyze": [
            "@psalm",
            "@lint"
        ],
        "psalm": "psalm --config=psalm.xml --no-cache",
        "lint": "phpcs --no-cache"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
